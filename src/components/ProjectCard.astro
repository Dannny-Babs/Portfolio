---
import { Image } from 'astro:assets';

const { image, title, tags } = Astro.props;

interface Props {
  image: any,
  title: string,
  tags: string[]
}
---

<div class="bg-[#E0C8FF] rounded-2xl p-4 box-border">
  <div class="flex flex-col gap-1 font-nohemi items-center justify-between">
    <div class="w-full">
      <Image
        loading="lazy"
        src={image}
        width={250}
        height={85}
        class="w-[240px] rounded-lg"
        alt="Rental Listing"
      />
    </div>


    <div class="w-full">
  
      <h3 class="text-3xl font-semibold text-black">
        {title}
      </h3>
    
      <div class="w-full mt-1 whitespace-nowrap">
        <span
          class="px-3 py-2 mr-4 font-medium rounded-lg text-white bg-red"
          aria-label={tags[0]}
          role="button"
        >
          {tags[0]}
        </span>
        <span
          class="px-3 py-2 font-medium rounded-lg text-white bg-purple"
          aria-label={tags[1]}
          role="button"
        >
          {tags[1]}
        </span>
      </div>
    </div>
    
  </div>


</div>