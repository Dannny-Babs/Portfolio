---
import AboutMe from "../components/AboutMe.astro";
import WhatIDo from "../components/WhatIDo.astro";
import WhatIUse from "../components/WhatIUse.astro";
import SectionHeader from "./SectionHeader.astro";

---

<section>
    <SectionHeader title="About."/>
    <div class="w-full grid grid-cols-1 lg:grid-cols-[_35%_65%] gap-4 md:gap-3">
        <AboutMe/>
    
        <div class="grid grid-cols-1 lg:grid-rows-2 gap-4 md:gap-3">
            <!-- What I use -->
            <WhatIUse/>
        
            <div class="flex flex-col gap-4 md:gap-3 w-full lg:grid lg:grid-cols-[_3fr_1.5fr]">
                <WhatIDo/>
                <div class="lg:h-full lg:justify-center font-nohemi justify-between items-center md:items-stretch bg-white flex grow lg:flex-col w-full p-7 rounded-[25px] md:rounded-[50px] lg:rounded-[75px] max-md:px-5">
                    <h1 class="text-gray-900 text-2xl md:text-4xl lg:text-6xl lg:w-1/2 font-semibold max-md:text-4xl">
                        See More
                    </h1>

                    <a
                        class="items-center w-1/5 lg:w-3/5 bg-red flex flex-col justify-center mt-0 lg:mt-20 aspect-square rounded-[132px]"
                        role="button"
                        href="/about"
                    >
                        <img
                            loading="lazy"
                            src="https://cdn.builder.io/api/v1/image/assets/TEMP/67646d36815b428a5981b0adc7baa2bc5c67d3f64829d18bc24a60a4af7937b3?apiKey=730671e7852c4d91bc984b7d2d07d7fb&"
                            class="aspect-square object-contain object-center w-20 overflow-hidden"
                            alt="a meaningful description"
                            aria-label="More information"
                        />
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
