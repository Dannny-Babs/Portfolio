---
interface Props {
    title: string;
}

const { title } = Astro.props;

---

<header
    class="tracking-wider mb-3 md:mb-5 bg-gray-900 justify-center mt-14 pl-8 pr-16 py-5 rounded-[36px] items-start max-md:text-4xl max-md:max-w-full max-md:mt-10 max-md:px-5"
    role="banner"
>
    <h1 class="text-4xl text-red md:text-7xl lg:text-[108px] font-humane font-black">{ title }</h1>
</header>
