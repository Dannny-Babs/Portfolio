---
import ListItem from '../components/ListItem.astro';

interface Props {
  gridView?: boolean
}

const { gridView } = Astro.props;
---


<section class="bg-purple flex-grow font-nohemi flex flex-col w-full py-7 lg:py-12 rounded-[25px] md:rounded-[50px] lg:rounded-[75px] max-md:max-w-full max-md:px-4 px-7 box-border">
  <h2 class="text-stone-50 font-semibold whitespace-nowrap ml-2.5 self-start text-2xl md:text-4xl lg:text-6xl">
    What I Do
  </h2>

  {
    !gridView ?
    <>
      <div class="relative overflow-x-scroll flex justify-between gap-3.5 mt-14 max-md:max-w-full max-md:flex-wrap max-md:mt-10">
        <ListItem title='Web Design' />
        <ListItem title='Motion Graphics'/>    
      </div>
    
      <div class="relative overflow-x-scroll flex items-stretch justify-between gap-3.5 mt-5 max-md:max-w-full max-md:flex-wrap">
        <ListItem title='UI/UX Design'/>
        <ListItem title='App Development'/>
      </div>
    
      <div class="relative overflow-x-scroll flex items-stretch justify-between gap-3.5 mt-5 mb-2.5 max-md:max-w-full max-md:flex-wrap">
        <ListItem title='Graphics Design'/>
        <ListItem title='Branding'/>    
      </div>
    
    </> 
    : 
    <div class="grid grid-cols-2 md:grid-cols-3 gap-2 mt-3 lg:mt-5 lg:gap-3 w-full">
      <ListItem title='Web Design' />
      <ListItem title='Motion Graphics'/>
      <ListItem title='UI/UX Design'/>
      <ListItem title='App Development'/>
      <ListItem title='Graphics Design'/>
      <ListItem title='Branding'/>    
    </div>
  }
  
</section>