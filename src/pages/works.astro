---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

import WorkTitle from "../components/WorkTitle.astro";
---

<Layout title="My Works">
    <Header/>

    <section class="font-nohemi mt-7 lg:mt-12 flex flex-col gap-2 md:gap-4">
        <div class="grid grid-cols-1 lg:grid-cols-[_2fr_1fr] gap-2 lg:gap-4">
            <img
                src="/image-4.svg"
                class="w-full h-full object-contain"
            />
            <div class="bg-[--tukay-blue] max-md:h-[300px] overflow-hidden py-6 px-5 md:py-9 md:px-7 lg:py-12 lg:px-10 relative rounded-[25px] md:rounded-[40px] lg:rounded-[60px]">
                <WorkTitle
                    titleColor="text-[--tukay-yellow]"
                    projectTitle="Tukay App Development"
                    subtitle="Github Repo"
                    subtitleColor="text-white"
                />

                <img
                    src="/image-7.svg"
                    class="absolute max-md:-bottom-6 max-md:w-2/3 right-0 bottom-0 object-contain"
                />
            </div>

        </div>

        <div class="grid gap-2 lg:gap-4 grid-cols-1 lg:grid-cols-[_1fr_2fr]">
            <div class="w-full h-full gap-2 lg:gap-4 flex flex-col lg:grid lg:grid-rows-[_2fr_1fr]">

                <div class="box-border max-md:h-[340px] py-6 px-5 md:py-9 md:px-7 lg:py-12 lg:px-10 relative overflow-hidden rounded-[25px] md:rounded-[40px] lg:rounded-[60px] bg-[--clot-purple]">
                    <WorkTitle
                        projectTitle="Clot App Development"
                        subtitle="Github Repo"
                        titleColor="text-[#1C106D]"
                        subtitleColor="text-[#8E6CEF]"
                    />
                    <img
                        src="/image-8.svg"
                        class="absolute bottom-0 right-0 object-contain"
                    />
                </div>

                <div class="max-md:h-[310px] relative py-6 px-5 md:py-9 md:px-7 lg:py-12 lg:px-10 rounded-[25px] md:rounded-[40px] lg:rounded-[60px] bg-[#EFE5DC]">
                    <WorkTitle
                        projectTitle="Buzz"
                        subtitle="Live App"
                        titleColor="text-[#FF5E4C]"
                        subtitleColor="text-[#070C10]"
                    />
                    
                    <img
                        src="/buzz-logo.svg"
                        class="w-1/2 absolute top-1/5 left-1/4 lg:w-1/3 lg:top-14 lg:left-1/3"
                    />

                </div>

            </div>

            <img
                src="/image-5.svg"
                class="w-full h-full object-contain"
            />

        </div>

        <div class="gap-2 lg:gap-4 grid grid-cols-1 lg:grid-cols-[_2fr_1fr]">
            
            <div class="max-md:h-[420px] box-border p-3 md:p-5 flex max-md:flex-col items-start justify-between relative overflow-hidden rounded-[25px] md:rounded-[40px] lg:rounded-[60px] bg-[--rent-monie]">
                <div class="pl-4 pt-4 box-border max-md:w-full">
                    <WorkTitle
                        projectTitle="Rentmonie UI/UX Design"
                        subtitle="Ongoing Project"
                        titleColor="text-[#1C106D]"
                        subtitleColor="text-[#0E62C5]"
                    />
                </div>
                <img
                    loading="lazy"
                    srcset="https://cdn.builder.io/api/v1/image/assets/TEMP/af1607ef3d13aa1537561dfcbbf157c75238c4f16c64edb03ad7aa70d82f64c0?apiKey=730671e7852c4d91bc984b7d2d07d7fb&width=100 100w, https://cdn.builder.io/api/v1/image/assets/TEMP/af1607ef3d13aa1537561dfcbbf157c75238c4f16c64edb03ad7aa70d82f64c0?apiKey=730671e7852c4d91bc984b7d2d07d7fb&width=200 200w, https://cdn.builder.io/api/v1/image/assets/TEMP/af1607ef3d13aa1537561dfcbbf157c75238c4f16c64edb03ad7aa70d82f64c0?apiKey=730671e7852c4d91bc984b7d2d07d7fb&width=400 400w, https://cdn.builder.io/api/v1/image/assets/TEMP/af1607ef3d13aa1537561dfcbbf157c75238c4f16c64edb03ad7aa70d82f64c0?apiKey=730671e7852c4d91bc984b7d2d07d7fb&width=800 800w, https://cdn.builder.io/api/v1/image/assets/TEMP/af1607ef3d13aa1537561dfcbbf157c75238c4f16c64edb03ad7aa70d82f64c0?apiKey=730671e7852c4d91bc984b7d2d07d7fb&width=1200 1200w, https://cdn.builder.io/api/v1/image/assets/TEMP/af1607ef3d13aa1537561dfcbbf157c75238c4f16c64edb03ad7aa70d82f64c0?apiKey=730671e7852c4d91bc984b7d2d07d7fb&width=1600 1600w, https://cdn.builder.io/api/v1/image/assets/TEMP/af1607ef3d13aa1537561dfcbbf157c75238c4f16c64edb03ad7aa70d82f64c0?apiKey=730671e7852c4d91bc984b7d2d07d7fb&width=2000 2000w, https://cdn.builder.io/api/v1/image/assets/TEMP/af1607ef3d13aa1537561dfcbbf157c75238c4f16c64edb03ad7aa70d82f64c0?apiKey=730671e7852c4d91bc984b7d2d07d7fb&"
                    class="h-full max-md:w-full w-[70%] object-contain max-md:rounded-[20px] rounded-[30px]"
                    alt="Rental Listing"
                />
            </div>

            <div class="max-md:h-[310px] box-border py-6 px-5 md:py-9 md:px-7 lg:py-12 lg:px-10 relative overflow-hidden rounded-[25px] md:rounded-[40px] lg:rounded-[60px] bg-[#FFE6C0]">
                <WorkTitle
                    projectTitle="Moglan"
                    subtitle="Live Website"
                    titleColor="text-[#82664E]"
                    subtitleColor="text-black"
                />

                <img
                    src="/image-9.svg"
                    class="absolute bottom-0 right-0 object-contain"
                />
            </div>
        </div>

        <div class="gap-2 lg:gap-4 grid grid-cols-1 lg:grid-cols-[_1fr_2fr]">
            
            <div class="box-border max-md:h-[400px] lg:h-full py-6 px-5 md:py-9 md:px-7 lg:py-12 lg:px-10 relative overflow-hidden rounded-[25px] md:rounded-[40px] lg:rounded-[60px] bg-[--poster-blue]">
                <WorkTitle
                    projectTitle="Poster Design"
                    subtitle=""
                    titleColor="text-white"
                    subtitleColor=""
                />
                <img
                    src="/image-10.svg"
                    class="absolute max-md:-bottom-28 max-md:-right-3 bottom-0 right-0 object-contain"
                />
            </div>

            <div class="w-full flex flex-col lg:grid lg:grid-rows-[_2.5fr_1fr] gap-2 md:gap-4">

                <div class="flex flex-col lg:grid lg:grid-cols-2 gap-2 lg:gap-4">
                    <div class="box-border max-md:h-[300px] py-6 px-5 md:py-9 md:px-7 lg:py-12 lg:px-10 relative overflow-hidden rounded-[25px] md:rounded-[40px] lg:rounded-[60px] bg-[--poster-pink]">
                        <WorkTitle
                            projectTitle="Poster Design"
                            subtitle=""
                            titleColor="text-[#5F3930]"
                            subtitleColor=""
                        />
                        <img
                            src="/image-11.svg"
                            class="absolute max-md:-bottom-6 bottom-0 right-0 object-contain"
                        />
                    </div>

                    <div class="box-border max-md:h-[300px] py-6 px-5 md:py-9 md:px-7 lg:py-12 lg:px-10 relative overflow-hidden rounded-[25px] md:rounded-[40px] lg:rounded-[60px] bg-[#FFF3D9]">
                        <WorkTitle
                            projectTitle="Branding"
                            subtitle=""
                            titleColor="text-[#DF482D]"
                            subtitleColor=""
                        />
                        <img
                            src="/image-12.svg"
                            class="absolute max-md:-bottom-16 max-md:-right-8 bottom-0 right-0 object-contain"
                        />

                    </div>
                </div>
                <div class="box-border font-nohemi text-white py-6 px-5 md:py-9 md:px-7 lg:py-12 lg:px-10 max-md:gap-3 grid grid-cols-1 lg:grid-cols-[_70%_30%] relative overflow-hidden rounded-[28px] md:rounded-[35px] lg:rounded-[45px] bg-[#111A23]">
                    <div>
                        <h2 class="font-semibold max-md:text-2xl text-4xl">Let's create something special</h2>
                        <p class="font-light max-md:text-lg text-xl">Have a project or opportunity in mind? Let's have a nice chat over it.</p>
                    </div>

                    <a href="/" class="bg-red max-md:w-full ml-auto rounded-2xl w-2/3 flex items-center justify-center">
                        Let's Talk
                    </a>
                </div>
            </div>
        

        </div>


    </section>
</Layout>